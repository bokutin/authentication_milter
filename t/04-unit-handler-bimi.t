my $private_key = Mail::DKIM::PrivateKey->load(Data=>'');

sub signed {
  my ( $text, %args ) = @_;
  my $dkim = Mail::DKIM::Signer->new(
    Algorithm => 'rsa-sha256',
    Method => 'relaxed',
    Domain => $args{domain},
    Selector => $args{selector},
    Key => $private_key,
    Headers => $args{headers},
  );
  my $signtext = $text;
  $signtext =~ s/\n/\r\n/g;
  $dkim->PRINT( $signtext );
  $dkim->CLOSE;
  my $signed = $dkim->signature->as_string . "\n" . $text;
  $signed =~ s/\r\n/\n/g;
  return $signed;
};

sub sealed {
  my ( $text, %args ) = @_;
  my $arc = Mail::DKIM::ARC::Signer->new(
    Algorithm => 'rsa-sha256',
    SrvId => $args{srvid},,
    Domain => $args{domain},
    Selector => $args{selector},
    Key => $private_key,
    Chain => 'none',
    Timestamp => time(),
  );
  my $signtext = $text;
  $signtext =~ s/\n/\r\n/g;
  $arc->PRINT( $signtext );
  $arc->CLOSE;
  my $sealed = $arc->as_string . $text;
  return $sealed;
}

